# === SERVIDOR MCP SANDRA ===
MCP_PORT=443
MCP_HOST=https://mcp.sandra-ia.com

# === QWEN MODELS ===
QWEN_EXECUTOR_MODEL=qwen2.5-code-r1
QWEN_AUDIO_MODEL=qwen-audio-v1
QWEN_IMAGE_MODEL=qwen-vision-v1
QWEN_VIDEO_MODEL=qwen-video-v1
QWEN_GLOBAL_TOKEN=sk-qwen-XXXXXXXXXXXXXXXXXXXXXXX

# === DEEPSEEK RAZONAMIENTO PROFUNDO ===
DEEPSEEK_MODEL=deepseek-r1
DEEPSEEK_TOKEN=sk-deepseek-XXXXXXXXXXXXXXXXXXXXXXX

# === CARTESIA VOICE ===
CARTESIA_API_KEY=sk-cartesia-XXXXXXXXXXXXXXXXXXXXXXX
CARTESIA_VOICE_ID=sandra-premium-espanol

# === TRANSCRIPCIÓN ===
DEEPGRAM_API_KEY=sk-deepgram-XXXXXXXXXXXXXXXXXXXXXXX

# === GENERACIÓN DE MULTIMODALIDAD ===
MULTIMODAL_ENGINE=SANDRA_MCP
ENABLE_IMAGE_GENERATION=true
ENABLE_VIDEO_GENERATION=true
ENABLE_AUDIO_GENERATION=true

# === PUBLIC APIS INTEGRATION ===
ENABLE_LOCAL_API_INDEX=true
API_REPO_URL=https://github.com/public-apis/public-apis
API_LOCAL_PATH=./data/apis/

# === SEGURIDAD Y SNAPSHOTS ===
ENABLE_AUTORESTORE=true
SNAPSHOT_INTERVAL_MINUTES=60
SNAPSHOT_STORAGE_PATH=./snapshots/
SNAPSHOT_RESTORE_ON_FAILURE=true

# === LOGS Y MONITOREO ===
ENABLE_LOGGING=true
LOG_LEVEL=info
LOG_OUTPUT=./logs/mcp-sandra.log
ALERT_EMAIL=admin@sandra-ia.com

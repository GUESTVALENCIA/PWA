{
  "mcpVersion": "1.0",
  "serverInfo": {
    "name": "MCP Orchestrator",
    "version": "1.0.0",
    "description": "Sistema de orquestación multi-agente para flujo de trabajo colaborativo"
  },
  "capabilities": {
    "tools": true,
    "resources": true,
    "prompts": false,
    "logging": true
  },
  "tools": [
    {
      "name": "project_read",
      "description": "Lee archivos de un proyecto sin modificarlos",
      "inputSchema": {
        "type": "object",
        "properties": {
          "projectId": { "type": "string", "description": "ID del proyecto" },
          "filePath": { "type": "string", "description": "Path del archivo a leer" }
        },
        "required": ["projectId", "filePath"]
      }
    },
    {
      "name": "project_propose",
      "description": "Crea una propuesta de cambios sin implementarla",
      "inputSchema": {
        "type": "object",
        "properties": {
          "projectId": { "type": "string" },
          "title": { "type": "string" },
          "files": { "type": "array" },
          "reasoning": { "type": "string" }
        },
        "required": ["projectId", "title", "files"]
      }
    },
    {
      "name": "proposal_review",
      "description": "Revisa una propuesta existente",
      "inputSchema": {
        "type": "object",
        "properties": {
          "proposalId": { "type": "string" },
          "assessment": { "type": "string" },
          "suggestions": { "type": "array" },
          "score": { "type": "number", "minimum": 0, "maximum": 10 }
        },
        "required": ["proposalId", "assessment"]
      }
    },
    {
      "name": "plan_unify",
      "description": "Unifica múltiples propuestas en un plan único",
      "inputSchema": {
        "type": "object",
        "properties": {
          "proposalIds": { "type": "array", "items": { "type": "string" } },
          "strategy": { "type": "string" }
        },
        "required": ["proposalIds"]
      }
    },
    {
      "name": "plan_implement",
      "description": "Implementa un plan aprobado",
      "inputSchema": {
        "type": "object",
        "properties": {
          "planId": { "type": "string" },
          "agentId": { "type": "string" }
        },
        "required": ["planId", "agentId"]
      }
    }
  ],
  "permissions": {
    "defaultMode": "propose",
    "allowedAgents": ["cursor", "claude", "chatgpt", "qwen", "gemini", "vscode"],
    "requireApproval": true,
    "implementationTimeout": 1800000
  },
  "rateLimiting": {
    "window": 60000,
    "limit": 100
  }
}

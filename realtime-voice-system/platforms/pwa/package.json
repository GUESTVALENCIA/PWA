{
  "name": "@realtime-voice/pwa",
  "version": "1.0.0",
  "description": "Progressive Web App version of Realtime Voice System - Works on Desktop, iOS, and Android",
  "author": "GuestsValencia",
  "license": "MIT",
  "private": false,
  "type": "module",
  "main": "src/index.html",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "npm run dev",
    "serve": "npx http-server src -c-1 -o",
    "lighthouse": "npx lighthouse http://localhost:8000 --view",
    "test:pwa": "npx pwa-asset-generator public/icon-512.png public/icons -i public/index.html --background '#667eea' --splash-only --type png",
    "analyze": "npx webpack-bundle-analyzer dist/stats.json"
  },
  "dependencies": {
    "@realtime-voice/client": "^1.0.0"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^0.17.0",
    "@vitejs/plugin-basic-ssl": "^1.0.0",
    "pwa-asset-generator": "^6.2.1",
    "lighthouse": "^11.0.0",
    "web-vitals": "^3.5.0"
  },
  "pwa": {
    "name": "Sistema de Llamadas Realtime Enterprise",
    "short_name": "Llamadas",
    "start_url": "/",
    "scope": "/",
    "display": "standalone",
    "orientation": "portrait-primary",
    "theme_color": "#667eea",
    "background_color": "#ffffff",
    "categories": ["productivity", "business"],
    "screenshots": [
      {
        "src": "/public/screenshot-1.png",
        "sizes": "540x720",
        "form_factor": "narrow"
      },
      {
        "src": "/public/screenshot-2.png",
        "sizes": "1280x720",
        "form_factor": "wide"
      }
    ]
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead",
    "not IE 11"
  ],
  "keywords": [
    "pwa",
    "realtime",
    "voice",
    "call",
    "websocket",
    "streaming",
    "ios",
    "android",
    "web-app"
  ]
}
